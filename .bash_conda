CONDA_DIRS=$(find {~,~/opt,/usr/local}/{,.}{anaconda,miniforge,miniconda}{,3} -maxdepth 0 -type d 2> /dev/null)
for CONDA_DIR in $CONDA_DIRS; do
    if [[ -d $CONDA_DIR && -f $CONDA_DIR/bin/conda ]]; then
        # echo conda initialize $CONDA_DIR

        # !! Contents within this block are managed by 'conda init' !!
        # >>> conda initialize >>>
        __conda_setup="$($CONDA_DIR/bin/conda 'shell.bash' 'hook' 2> /dev/null)"
        if [ $? -eq 0 ]; then
            eval "$__conda_setup"
        else
            if [ -f "$CONDA_DIR/etc/profile.d/conda.sh" ]; then
                . "$CONDA_DIR/etc/profile.d/conda.sh"
            elif [[ -d $CONDA_DIR/bin ]]; then
                export PATH="$CONDA_DIR/bin:$PATH"
                echo \$PATH = $PATH
            fi
        fi
        unset __conda_setup
        # <<< conda initialize <<<
    fi
done

